<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ValueFragment">

    <!-- TITLE - LOG YOUR FOOD WASTE TITLE START-->

    <!--  VEGETABLE BAR START -->


    ** layout box vegetable **

    <TextView
        android:id="@+id/value_hd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Log your foodwaste"
        android:textColor="#1F472E"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView"
            android:layout_width="258dp"
            android:layout_height="58dp"
            android:layout_marginTop="80dp"
            app:cardBackgroundColor="#E3F1E4"
            app:cardCornerRadius="15dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:showIn="@layout/fragment_value">

            <include layout="@layout/layout_vegetables" />

        </com.google.android.material.card.MaterialCardView>

        ** layout box dairy **
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView2"
            android:layout_width="258dp"
            android:layout_height="58dp"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#E3F1E4"
            app:cardCornerRadius="15dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialCardView"
            tools:showIn="@layout/fragment_value">

            <include layout="@layout/layout_dairy" />

        </com.google.android.material.card.MaterialCardView>

        ** layout box meat **
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView3"
            android:layout_width="258dp"
            android:layout_height="58dp"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#E3F1E4"
            app:cardCornerRadius="15dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialCardView2"
            tools:showIn="@layout/fragment_value">

            <include layout="@layout/layout_meat" />

        </com.google.android.material.card.MaterialCardView>

        ** layout box bread **
        <com.google.android.material.card.MaterialCardView
            android:layout_width="258dp"
            android:layout_height="58dp"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#E3F1E4"
            app:cardCornerRadius="15dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialCardView3"
            tools:showIn="@layout/fragment_value">

            <include layout="@layout/layout_bread" />

        </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="333dp"
        android:layout_height="200dp"
        android:layout_marginBottom="28dp"
        app:cardBackgroundColor="#E3F1E4"
        app:cardCornerRadius="15dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="false"
        app:checkedIconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:showIn="@layout/fragment_value">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:paddingLeft="10dp"
            android:orientation="vertical">>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="253dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:hint="Type food items you have thrown out..."
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textSize="12dp" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:background="@drawable/ic_mic"
                        app:backgroundTint="#534E4E" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:text="Enter the price of the item"
                        android:textSize="12dp"
                        android:textStyle="bold"/>


                    <EditText
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:background="@drawable/box1"
                        android:ems="10"
                        android:hint="kr."
                        android:paddingLeft="10dp"
                        android:text=""
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:text="Enter estimated use of item"
                        android:textSize="12dp"
                        android:textStyle="bold"/>

                    <EditText
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:background="@drawable/box1"
                        android:ems="10"
                        android:hint="%"
                        android:paddingLeft="45dp"
                        android:textSize="12dp"
                        android:text="" />

                    <ImageButton
                        android:id="@+id/infoButton"
                        android:layout_width="37dp"
                        android:layout_height="26dp"
                        android:background="#00FFFFFF"
                        android:src="@drawable/ic_information_button" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pick a category for  your item"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_carrot" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_milk" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_meat" />

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                      android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_bread" />

                    <Button
                        android:id="@+id/button6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="enter"
                        android:layout_marginLeft="25dp"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>

